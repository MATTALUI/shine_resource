=render 'layouts/navbar'
.row
  .col.s10.offset-s1
    .card.grey.lighten-3
      .card-content
        .card-title
          .row
            %h5.col.s6
              =@caretakers.length
              Providers at
              =current_user.organization
        .card-body
          %table.striped.highlight
            %thead
              %tr
                %th Provider
                %th Email
                %th
            %tbody
              -@caretakers.each do |caretaker|
                %tr
                  %td=caretaker
                  %td=caretaker.email
                  %td
                    =link_to "View", caretaker_path(caretaker), class: "btn yellow darken-3"


        .card-action
